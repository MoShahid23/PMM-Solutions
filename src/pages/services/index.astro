---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { siteConfig, services } from '../../config';
import { withBase } from '../../utils/url';
---

<Layout 
  title="Our Services"
  description="Expert tech repair services including laptop repair, phone repair, and data recovery. Fast, affordable, and professional service."
  canonical={`${siteConfig.url}/services`}
>
  <!-- Hero Section -->
  <section class="py-9 bg-dark-section">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center animate-fade-in">
        <div class="flex justify-center mb-6">
          <div class="w-32 h-1.5 bg-accent-primary rounded-full"></div>
        </div>
        <h1 class="text-4xl font-bold mb-4 text-dark-primary">Our Tech Repair Services</h1>
        <p class="text-xl text-dark-secondary">
          Professional repair services for all your devices. Fast turnaround, competitive pricing, and expert technicians.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="py-9 bg-dark-darker scroll-reveal">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        {services.map((service, index) => (
          <div class={`animate-slide-up delay-${(index + 1) * 100}`}>
            <ServiceCard
              name={service.name}
              slug={service.slug}
              description={service.description}
              icon={service.icon}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-9 bg-dark-section scroll-reveal">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="rounded-lg p-8 border-l-4 border-accent-primary scroll-reveal shadow-card bg-dark-card border-dark">
          <h2 class="text-2xl font-bold mb-4 text-dark-primary">Why Choose Us?</h2>
          <ul class="space-y-3 text-dark-secondary">
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>Fast turnaround - Most repairs completed within 24-48 hours</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>Competitive pricing with transparent quotes</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>Experienced technicians with years of expertise</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>On-site service available throughout South London, Surrey and surrounding areas</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>Warranty on all repairs</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent-primary mr-2 text-lg font-bold">✓</span>
              <span>All brands and models supported</span>
            </li>
          </ul>
        </div>

        <div class="text-center mt-12">
          <a 
            href={withBase('/contact')} 
            class="btn-primary glow-effect inline-block"
          >
            Get a Free Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Scroll reveal animation
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.scroll-reveal').forEach(el => {
      observer.observe(el);
    });
  </script>
</Layout>

