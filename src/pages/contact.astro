---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
import FAQ from "../components/FAQ.astro";
import { siteConfig, businessInfo } from "../config";

const faqData = [
  {
    question: "How do I book a repair?",
    answer:
      "You can book a repair by filling out the contact form, calling us directly, or visiting our shop. We'll provide a free quote and schedule a convenient time for your repair.",
  },
  {
    question: "Do you offer free quotes?",
    answer:
      "Yes, we provide free diagnostics and quotes for all repairs. There's no obligation to proceed, and we'll explain the issue and costs before any work begins.",
  },
  {
    question: "What are your opening hours?",
    answer: `We're open Monday to Friday 9am-6pm, Saturday 10am-4pm, and closed on Sundays. For urgent repairs outside these hours, please contact us and we'll do our best to help.`,
  },
  {
    question: "How can I track my repair?",
    answer:
      "Once you book a repair, we'll provide you with a reference number and keep you updated via phone or email on the progress of your repair.",
  },
];
---

<Layout
  title="Contact Us"
  description="Get in touch for tech repair services. Call us, visit our shop, or fill out the contact form for a free quote."
  canonical={`${siteConfig.url}/contact`}
>
  <!-- Hero Section -->
  <section class="py-9 bg-dark-section">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center animate-fade-in">
        <div class="flex justify-center mb-6">
          <div class="w-32 h-1.5 bg-accent-primary rounded-full"></div>
        </div>
        <h1 class="text-4xl font-bold mb-4 text-dark-primary">
          Contact Us
        </h1>
        <p class="text-xl text-dark-secondary mb-12">
          Get in touch for a free quote or to schedule a repair. We're here to
          help!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="py-9 bg-dark-darker scroll-reveal">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <!-- Contact Information -->
          <div class="scroll-reveal">
            <h2 class="text-2xl font-bold mb-6 text-dark-primary">
              Get in Touch
            </h2>
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-lg mb-2 text-dark-primary">
                  Phone
                </h3>
                <a
                  href={`tel:${businessInfo.phone}`}
                  class="link-accent text-accent-primary text-lg"
                >
                  {businessInfo.phone}
                </a>
              </div>

              <div>
                <h3 class="font-semibold text-lg mb-2 text-dark-primary">
                  Email
                </h3>
                <a
                  href={`mailto:${businessInfo.email}`}
                  class="link-accent text-accent-primary"
                >
                  {businessInfo.email}
                </a>
              </div>

              <div>
                <h3 class="font-semibold text-lg mb-2 text-dark-primary">
                  Address
                </h3>
                <address class="text-dark-secondary not-italic">
                  {businessInfo.address.street}<br />
                  {businessInfo.address.city}, {businessInfo.address.postcode}<br
                  />
                  {businessInfo.address.country}
                </address>
              </div>

              <div>
                <h3 class="font-semibold text-lg mb-2 text-dark-primary">
                  Opening Hours
                </h3>
                <ul class="text-dark-secondary space-y-1">
                  <li>Monday - Saturday: {businessInfo.openingHours.monday}</li>
                  <li>Sunday: {businessInfo.openingHours.sunday}</li>
                </ul>
              </div>
            </div>

            <div
              class="mt-8 border-l-4 border-accent-primary p-4 rounded-lg shadow-card bg-dark-card border-dark"
            >
              <p class="text-dark-secondary">
                <strong class="text-dark-primary">Need urgent help?</strong> Or call now:
                <a
                  href={`tel:${businessInfo.phone}`}
                  class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-accent-primary text-white font-semibold mt-2"
                >
                  {businessInfo.phone}
                </a>
              </p>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="scroll-reveal">
            <h2 class="text-2xl font-bold mb-6 text-dark-primary">
              Send Us a Message
            </h2>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-9 bg-dark-section scroll-reveal">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div
          class="bg-dark-card rounded-lg p-8 text-center border-2 border-accent-primary/30 scroll-reveal"
        >
          <h2 class="text-2xl font-bold mb-4 text-dark-primary">Find Us</h2>
          <p class="text-dark-secondary mb-6">
            Visit our repair shop at {businessInfo.address.street}, {
              businessInfo.address.city
            }, {businessInfo.address.postcode}
          </p>

          <div class="overflow-hidden rounded-lg shadow-md mb-4">
            <iframe
              src={`https://www.google.com/maps?q=PMM+Solutions,${businessInfo.address.street},${businessInfo.address.city},${businessInfo.address.postcode}&output=embed`}
              width="100%"
              height="400"
              loading="lazy"
              allowfullscreen=""
              referrerpolicy="no-referrer-when-downgrade"
              class="rounded-lg"></iframe>
          </div>

          <p class="text-sm text-dark-muted">
            Conveniently located near Morden Underground Station. Free parking
            available nearby.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-9 bg-dark-darker scroll-reveal">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <FAQ questions={faqData} variant="dark" />
      </div>
    </div>
  </section>

  <script>
    // Scroll reveal animation
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
        }
      });
    }, observerOptions);

    document.querySelectorAll(".scroll-reveal").forEach((el) => {
      observer.observe(el);
    });
  </script>
</Layout>
