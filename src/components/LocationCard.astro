---
interface Props {
  name: string;
  slug: string;
  description?: string;
}

const { name, slug, description = `We provide on-site tech repair services in ${name} and surrounding areas.` } = Astro.props;
---

<a
  href={`/tech-repair-in/${slug}`}
  class="block bg-dark-card rounded-2xl shadow-soft hover:shadow-soft-lg p-8 group transition-all duration-200 border border-dark hover:border-accent-subtle hover:-translate-y-1"
>
  <div class="flex items-start gap-4 mb-4">
    <div class="text-dark-primary flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
      </svg>
    </div>
    <h3 class="text-xl font-bold text-dark-primary flex-1">{name}</h3>
  </div>
  {description && description.trim() && (
    <p class="text-dark-secondary mb-4 leading-relaxed">{description}</p>
  )}
  <span class="text-dark-primary font-medium inline-flex items-center gap-2 transition-all duration-200 group-hover:gap-3">
    View services
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
    </svg>
  </span>
</a>
