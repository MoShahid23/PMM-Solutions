---
import { formEndpoint } from '../config';
---

<form 
  action={formEndpoint}
  method="POST"
  class="space-y-6 bg-bg-surface p-8 rounded-lg shadow-card border border-border-color"
>
  <div>
    <label for="name" class="block text-sm font-medium text-text-primary mb-2">
      Name *
    </label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-2 bg-white border border-border-color rounded-md text-text-primary placeholder-text-muted focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-all duration-200 invalid:border-semantic-error invalid:ring-semantic-error/20"
      placeholder="Your name"
    />
  </div>
  
  <div>
    <label for="email" class="block text-sm font-medium text-text-primary mb-2">
      Email *
    </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-2 bg-white border border-border-color rounded-md text-text-primary placeholder-text-muted focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-all duration-200 invalid:border-semantic-error invalid:ring-semantic-error/20"
      placeholder="your.email@example.com"
    />
  </div>
  
  <div>
    <label for="phone" class="block text-sm font-medium text-text-primary mb-2">
      Phone
    </label>
    <input
      type="tel"
      id="phone"
      name="phone"
      class="w-full px-4 py-2 bg-white border border-border-color rounded-md text-text-primary placeholder-text-muted focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-all duration-200 invalid:border-semantic-error invalid:ring-semantic-error/20"
      placeholder="020 1234 5678"
    />
  </div>
  
  <div>
    <label for="service" class="block text-sm font-medium text-text-primary mb-2">
      Service Needed
    </label>
    <select
      id="service"
      name="service"
      class="w-full px-4 py-2 bg-white border border-border-color rounded-md text-text-primary focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-all duration-200"
    >
      <option value="">Select a service</option>
      <option value="laptop-repair">Laptop Repair</option>
      <option value="phone-repair">Phone Repair</option>
      <option value="data-recovery">Data Recovery</option>
      <option value="other">Other</option>
    </select>
  </div>
  
  <div>
    <label for="message" class="block text-sm font-medium text-text-primary mb-2">
      Message *
    </label>
    <textarea
      id="message"
      name="message"
      rows="4"
      required
      class="w-full px-4 py-2 bg-white border border-border-color rounded-md text-text-primary placeholder-text-muted focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-all duration-200 invalid:border-semantic-error invalid:ring-semantic-error/20"
      placeholder="Tell us about your repair needs..."
    ></textarea>
  </div>
  
  <button
    type="submit"
    class="btn-primary w-full glow-effect"
  >
    Send Message
  </button>
</form>
